<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="40dp">

    <com.google.android.material.button.MaterialButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:text="i"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        app:backgroundTint="#26A69A"
        app:elevation="4dp"
        app:strokeColor="#C62828"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:text="S"
        android:textColor="#F5F5F5"
        app:backgroundTint="#66BB6A"
        app:elevation="4dp"
        app:strokeColor="#C2185B"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:text="E"
        android:textColor="#DCDCDC"
        app:backgroundTint="#9CCC65"
        app:elevation="4dp"
        app:strokeColor="#7B1FA2"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="A"
        android:textColor="#808080"
        app:backgroundTint="#D4E157"
        app:elevation="4dp"
        app:strokeColor="#512DA8"
        app:strokeWidth="3dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:text="L"
        android:textColor="#000000"
        app:backgroundTint="#FFEE58"
        app:elevation="4dp"
        app:strokeColor="#303F9F"
        app:strokeWidth="3dp" />
</LinearLayout>